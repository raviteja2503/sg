        console.log(formData);
        var name, email, mobile, qualification;
        name = $("#name").val();
        email = $("#email").val();
        mobile = $("#mobile").val();
        qualification = $("#qualification").val();
        message = $("#message").val();
        file = $("#resume").val();

        alert(name + " " + email + " " + mobile + " " + message + " " + qualification + " " + file);




        swal({
            title: 'Proccesing Request',
            text: 'Please Wait while until your query Admitted',
            timer: 1500,
            onOpen: function() {
                swal.showLoading()
            }
        })

        var endpoint = '/jobApplication';

        $.ajax({
            type: "GET",
            url: endpoint,
            data: {
                name: name,
                email: email,
                mobile: mobile,
                qualification: qualification,
                message: message,
                file: file
            },
            success: function() {
                alert('success post');
                swal({
                    icon: 'success',
                    title: 'Your Query Admitted Succesfully, We will reach you soon..!',
                    button: "Ok",
                    closeOnClickOutside: false
                })
            },
            error: function() {
                alert('Error post');
                swal({
                    icon: 'error',
                    title: 'Error In Appliying For job, Please try again..!',
                    showConfirmButton: false
                })
            }
        });

