<!-- <script>
    function sendMail() {
        event.preventDefault();
        var name, email, mobile, qualification, jobPost, resume, message;
        name = $("#name").val();
        email = $("#email").val();
        mobile = $("#mobile").val();
        qualification = $("#qualification").val();
        jobPost = $("#jobPost").val();
        resume = $("#resume").val();
        message = $("#message").val();

        var formData = {
            name   : name,
            email  : email,
            mobile : mobile,
            qualification : qualification,
            jobPost : jobPost,
            resume : resume,
            message : message
        };

        console.log(formData);

        var canSubmit = true;
        if ($('#name').val() === "") {
            $('#name').addClass('isError');
            /*$('#nameErrMsg').text("Name Is Required");*/
            canSubmit = false;
        }
        if ($('#email').val() === "") {
            $('#email').addClass('isError');
            /*$('#emailErrMsg').text("email Is Required");*/
            canSubmit = false;
        }
        if ($('#mobile').val() === "") {
            $('#mobile').addClass('isError');
            /*$('#mobileErrMsg').text("mobile Is Required");*/
            canSubmit = false;
        }
        if ($('#qualification').val() === "") {
            $('#qualification').addClass('isError');
            /*$('#mobileErrMsg').text("qualification Is Required");*/
            canSubmit = false;
        }
        if ($('#jobPost').val() === "") {
            $('#jobPost').addClass('isError');
            /*$('#mobileErrMsg').text("jobPost Is Required");*/
            canSubmit = false;
        }
        if ($('#resume').val() === "") {
            $('#resume').addClass('isError');
            /*$('#messageErrMsg').text("message Is Required");*/
            canSubmit = false;
        }
        if ($('#message').val() === "") {
            $('#message').addClass('isError');
            /*$('#messageErrMsg').text("message Is Required");*/
            canSubmit = false;
        }
        if (canSubmit) {
            swal({
                title: 'Proccesing Request',
                text: 'Please Wait while until your query Admitted',
                timer: 1500,
                onOpen: function() {
                    swal.showLoading()
                }
            })

            $.get("/jobApplication", {
                name: name,
                email: email,
                mobile: mobile,
                qualification : qualification,
                jobPost : jobPost,
                resume : resume,
                message : message
            }, function(response) {
                if (response == "success") {
                    swal({
                        icon: 'success',
                        title: 'Your Query Admitted Succesfully, We will reach you soon..!',
                        button: "Ok",
                        closeOnClickOutside: false
                    })
                } else if (response == "error") {
                    swal({
                        icon: 'error',
                        title: 'Error In Sending Mail, Please try again..!',
                        button: "Ok",
                        closeOnClickOutside: false
                    })
                }
            });

        }
    }

    function onTyping(inputId) {
        var inputLength = $('#' + inputId).val().length;
        if (inputLength === 0) {
            $('#' + inputId).removeClass('isSuccess');
            $('#' + inputId).addClass('isError');
        } else {
            $('#' + inputId).removeClass('isError');
            $('#' + inputId).addClass('isSuccess');
        }
    }
</script> -->